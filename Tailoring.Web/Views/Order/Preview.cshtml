@model  Tailoring.Models.RequestOrder
@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Preview</h2>

<div class="container container_fixed inner_contnr container_fixed_prv" id="order-preview">
    <div class="col-lg-11 prodct_prvw_main" style="float: none; margin:0 auto; margin-top:10px;background-color:white;border:1px solid grey;">
        <div class="col-lg-12 prodct_prvw_head">
            #@Model.Product.Abbreviation@Model.OrderNumber | @Model.Product.Description | <span style="font-weight:normal; font-size:14px;">Product ID: UTP6</span>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height:auto; padding:15px 0px 15px 0px;">

            <div class="col-lg-4 prct_prvw_innr">
                <div class="col-lg-12 prct_prvw_innr_hed">Main</div>


                @foreach (var item in Model.ProductOptions) {
                    if (!item.OptionType.ToLower().Equals("add-ons")) {
                        <div class="col-lg-12 prct_prvw_innr_cnt">
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;">@item.OptionType</div>
                            </div>
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8" style="text-align:center;">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;"><img style="max-height:70px;" src=@item.ImageUrl></div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;">@item.Description</div>
                            </div>
                        </div>
                    } 

                }

                @*<div class="col-lg-12 prct_prvw_innr_cnt">
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;">FRONT</div>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8" style="text-align:center;">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;"><img style="max-height:70px;" src="/resources/images/UTC52.png"></div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;">Deep Sweetheart neck</div>
                        </div>
                    </div>*@



                <div class="col-lg-12 prct_prvw_innr_cnt">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;font-size: 14px;">Instructions : &nbsp; &nbsp; @Model.Instructions </div>
                </div>
            </div>

            <div class="col-lg-4 prct_prvw_innr">
                <div class="col-lg-12 prct_prvw_innr_hed">Extras</div>
               
                @foreach (var item in Model.ProductOptions) {
                    if (item.OptionType.ToLower().Equals("add-ons")) {
                        <div class="col-lg-12 prct_prvw_innr_cnt">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0px;margin-bottom:10px;">
                                <b>@item.Group</b> @*value like closing*@
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0">
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5" style="padding: 0px;">@item.Description</div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5" style="text-align:right;">
                                    Rs. @item.Amount/-
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>

            <div class="col-lg-4 prct_prvw_innr" style="border:none">
                <div class="col-lg-12 prct_prvw_innr_hed">Price</div>
                <div class="col-lg-12 prct_prvw_innr_cnt" style="border:none;">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding:0">Basic Stitching :</div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align: end;">
                            Rs. 550/-
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 prct_prvw_innr_cnt" style="border:none; padding:0px;">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding:0">Add-ons :</div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align: end;">
                            Rs. 280/-
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 prct_prvw_innr_cnt order-discount-parent" style="border: none; padding: 0px; margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding:0"><b>Discount :</b></div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align: end;">
                            <b>Rs. </b><b class="negative-sign">-</b><b class="order-discount">125</b><b>/-</b>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 prodct_prvw_head" style="padding:0;">
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding:0">Total: </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="text-align: end;">
                        <b>Rs. </b><b class="order-total">705</b><b>/-</b>
                        <!--
                        Rs. 830/--->
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 hidden-lg" style="border-bottom:1px solid #C6C6C6; margin-top:10px"></div>

                <div class="col-lg-12" style="margin-top:40px; text-align:center;">
                    <div class="col-lg-12"><a href="#" class="remove-item" data-id="ODR115889">X Remove</a></div>
                </div>
            </div>
        </div>
    </div>
</div>